{
    "name": "res15",
    "model": {
        "name": "ResNet",
        "config": {
            "n_feature_maps": 45,
            "n_layers": 13,
            "use_dilation": true
        }
    },

    "datasets": {
        "train": {
            "dataset": {
                "name": "GSCDataset",
                "config": {
                    "noise_pct": 0.1
                }
            },
            "data_loader": {
                "name":"AudioDataLoader",
                "config": {}
            }
        },
        "dev": {
            "dataset": {
                "name": "GSCDataset",
                "config": {
                    "noise_pct": 0.1
                }
            },
            "data_loader": {
                "name":"AudioDataLoader",
                "config": {}
            }
        },
        "test": {
            "dataset": {
                "name": "GSCDataset",
                "config": {
                    "noise_pct": 0.1
                }
            },
            "data_loader": {
                "name":"AudioDataLoader",
                "config": {}
            }
        }
    },

    "GSCDataset": {
        "data_dir": "/data/kws/gsc/v2",
        "sample_rate": 16000,
        "group_speakers_by_id": true,
        "dev_pct": 0.1,
        "test_pct": 0.1
    },

    "AudioDataLoader": {
        "audio_preprocessing": "MFCCs",
        "batch_size": 64
    },

    "optimizer": {
        "name": "SGD",
        "config": {
            "lr": 0.1,
            "nesterov": false,
            "weight_decay": 0.00001,
            "momentum": 0.9
        }
    },

    "lr_scheduler": {
        "name": "StepLR",
        "config": {
            "use_per_epoch_stepping": true,
            "step_size": 3000,
            "gamma": 0.1
        }
    },

    "unknown_class": true,
    "silence_class": true,
    "target_class": ["yes", "no", "up", "down", "left", "right", "on", "off", "stop", "go"],
    "seed": 0,
    "epoch": 30,
    "metric": ["Acc", "PerClassAcc"],
    "criterion": ["Acc", "max"],
    "loss_fn": "ce_loss",
    "num_gpu": 1,
    "output_dir": "workspaces",
    "checkpoint_frequency": 10
}
