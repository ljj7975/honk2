{

    "model": {
        "name": "ResNet",
        "config": {
            "res_pool": [
                2,
                2
            ],
            "n_feature_maps": 45,
            "n_layers": 6
        }
    },

    "datasets": {
        "train": {
            "dataset": {
                "name": "GSCDataset",
                "config": {
                    "noise_pct": 0.1
                }
            },
            "data_loader": {
                "name":"AudioDataLoader",
                "config": {}
            }
        },
        "dev": {
            "dataset": {
                "name": "GSCDataset",
                "config": {
                    "noise_pct": 0.0
                }
            },
            "data_loader": {
                "name":"AudioDataLoader",
                "config": {}
            }
        },
        "test": {
            "dataset": {
                "name": "GSCDataset",
                "config": {
                    "noise_pct": 0.0
                }
            },
            "data_loader": {
                "name":"AudioDataLoader",
                "config": {}
            }
        }
    },

    "GSCDataset": {
        "data_dir": "/data/kws/speech_commands",
        "sample_rate": 16000,
        "group_speakers_by_id": true,
        "dev_pct": 0.1,
        "test_pct": 0.1
    },

    "AudioDataLoader": {
        "audio_preprocessing": "MFCCs",
        "batch_size": 512
    },

    "optimizer": {
        "name": "SGD",
        "config": {
            "lr": 0.1,
            "nesterov": false,
            "weight_decay": 0.00001,
            "momentum": 0.9
        }
    },

    "lr_scheduler": {
        "name": "StepLR",
        "config": {
            "step_size": 10,
            "gamma": 0.1
        }
    },

    "unknown_class": true,
    "silence_class": true,
    "target_class": ["yes", "no", "up", "down", "left", "right", "on", "off", "stop", "go"],
    "seed": 100,
    "epoch": 5,
    "metric": "pred_acc",
    "loss_fn": "ce_loss",
    "num_gpu": 3,
    "output_dir": "workspaces",
    "evaluate_model_dir": "workspaces/ResNet/sample_trained_model/",
    "evaluate_epoch": 10,
    "checkpoint_frequency": 3
}
