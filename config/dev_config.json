{
    "name": "dev",
    "model": {
        "name": "ResNet",
        "config": {
            "avg_pool": [
                4,
                3
            ],
            "n_feature_maps": 45,
            "n_layers": 6,
            "use_dilation": false
        }
    },

    "datasets": {
        "train": {
            "dataset": {
                "name": "HeySnipsDataset",
                "config": {
                    "noise_pct": 0.1
                }
            },
            "data_loader": {
                "name":"AudioDataLoader",
                "config": {}
            }
        },
        "dev": {
            "dataset": {
                "name": "HeySnipsDataset",
                "config": {
                    "noise_pct": 0.1
                }
            },
            "data_loader": {
                "name":"AudioDataLoader",
                "config": {}
            }
        },
        "test": {
            "dataset": {
                "name": "HeySnipsDataset",
                "config": {
                    "noise_pct": 0.1
                }
            },
            "data_loader": {
                "name":"AudioDataLoader",
                "config": {}
            }
        }
    },

    "HeySnipsDataset": {
        "data_dir": "/data/hey_snips",
        "sample_rate": 16000,
        "audio_length": 9,
        "num_noise_sample": 200
    },

    "AudioDataLoader": {
        "audio_preprocessing": "MFCCs",
        "batch_size": 64
    },

    "optimizer": {
        "name": "SGD",
        "config": {
            "lr": 0.1,
            "nesterov": false,
            "weight_decay": 0.00001,
            "momentum": 0.9
        }
    },

    "lr_scheduler": {
        "name": "StepLR",
        "config": {
            "use_per_epoch_stepping": true,
            "step_size": 3000,
            "gamma": 0.1
        }
    },

    "unknown_class": false,
    "silence_class": false,
    "target_class": ["negative", "positive"],
    "seed": 0,
    "epoch": 10,
    "metric": ["Acc", "PerClassAcc"],
    "criterion": ["Acc", "max"],
    "loss_fn": "ce_loss",
    "num_gpu": 1,
    "output_dir": "workspaces",
    "evaluate_model_dir": "workspaces/ResNet/sample_trained_model/",
    "evaluate_epoch": 10,
    "checkpoint_frequency": 10
}
